package  {	import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.events.Event;	import flash.filters.GlowFilter;	import com.greensock.TweenLite;	import com.greensock.plugins.*;			public class JourneyBallMenu extends Sprite	{		private var _glow:GlowFilter = new GlowFilter(0xffffff,1,10,10,5,3);		public var selectedScene:int = 0;				public function JourneyBallMenu() 		{			TweenPlugin.activate([ColorTransformPlugin]);						btnBeach.addEventListener(MouseEvent.MOUSE_OVER, over);			btnBeach.addEventListener(MouseEvent.MOUSE_OUT, out);			btnBeach.addEventListener(MouseEvent.CLICK, click);			btnMountain.addEventListener(MouseEvent.MOUSE_OVER, over);			btnMountain.addEventListener(MouseEvent.MOUSE_OUT, out);			btnMountain.addEventListener(MouseEvent.CLICK, click);			btnCountrySide.addEventListener(MouseEvent.MOUSE_OVER, over);			btnCountrySide.addEventListener(MouseEvent.MOUSE_OUT, out);			btnCountrySide.addEventListener(MouseEvent.CLICK, click);			btnDesert.addEventListener(MouseEvent.MOUSE_OVER, over);			btnDesert.addEventListener(MouseEvent.MOUSE_OUT, out);			btnDesert.addEventListener(MouseEvent.CLICK, click);						ball.addEventListener(MouseEvent.CLICK, clickBall);			ball.mouseEnabled = false;		}				public function enableBtns(enable:Boolean):void		{			btnBeach.mouseEnabled = enable;			btnMountain.mouseEnabled = enable;			btnCountrySide.mouseEnabled = enable;			btnDesert.mouseEnabled = enable;						ball.mouseEnabled = !enable;		}				private function over(e:MouseEvent):void		{			var target = e.currentTarget;						addChild(target);						TweenLite.to(target, .2, {scaleX:1.1, scaleY:1.1});			TweenLite.killTweensOf(ball);			TweenLite.to(ball,.2,{colorTransform:{tint:0x000000, tintAmount:0.3}});						target.filters = [_glow];		}		private function out(e:MouseEvent):void		{			var target = e.currentTarget;						TweenLite.to(target, .2, {scaleX:1, scaleY:1});			TweenLite.killTweensOf(ball);			TweenLite.to(ball,.2,{colorTransform:{tint:0x000000, tintAmount:0}});						target.filters = [];		}				private function click(e:MouseEvent):void		{			var target = e.currentTarget;						enableBtns(false);						switch(target.name)			{				case "btnBeach":					selectedScene = 1;					dispatchEvent(new Event("selectAJourney"));					break;									case "btnMountain":					selectedScene = 4;					dispatchEvent(new Event("selectAJourney"));					break;									case "btnCountrySide":					selectedScene = 3;					dispatchEvent(new Event("selectAJourney"));					break;									case "btnDesert":					selectedScene = 2;					dispatchEvent(new Event("selectAJourney"));					break;									default:					break;			}		}				private function clickBall(e:MouseEvent):void		{			dispatchEvent(new Event("callBallBack"));			enableBtns(true);		}			}	}