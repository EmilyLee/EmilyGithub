package  {	import flash.display.MovieClip;	import flash.events.Event;		public class SceneController extends MovieClip	{		private var _popups:Array = new Array;		public function SceneController() 		{			for(var i:int = 0; i < this.numChildren; i++)			{				var target = this.getChildAt(i);								if(target is mcJourneyPopup)				{					_popups.push(target);					target.addEventListener("clickPopup",clickPopup);				}			}		}				public function closeAllPopup(except = null):void		{			for(var i in _popups)			{				if(except)				{					if(_popups[i] != except)					_popups[i].close();				}				else				{					_popups[i].close();				}			}		}				private function clickPopup(e:Event):void		{						var target = e.currentTarget;			//trace(target);			if(!target.onOff)			{				target.open();			}			else			{				target.close();			}						closeAllPopup(target);		}	}	}